<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragmentBackgroundColor"
    tools:context=".ui.baglanti.BaglantiFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/SmartsenseBandConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="@dimen/cardview_padding">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="3"
                  android:gravity="center"
                  android:text="@string/smartsense_band"
                  android:textAlignment="center"
                  android:textSize="18sp" />

              <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:src="@drawable/ic_smartwatch" />

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/connectedLayout"
              android:visibility="gone"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:id="@+id/connectedText"
                  android:gravity="center"
                  android:text="@string/connected"
                  android:textAlignment="center"
                  android:layout_marginRight="4dp"
                  android:textSize="16sp" />

              <com.google.android.material.button.MaterialButton
                  android:layout_width="match_parent"
                  android:text="@string/disconnect"
                  android:layout_marginLeft="4dp"
                  android:id="@+id/disconnect"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>

          </LinearLayout>
      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>